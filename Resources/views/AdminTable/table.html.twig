<div id="dyn" class="hiddenpars">
    {% if documents %}
        <a class="tOptions" title="{% trans from "views" %}black.bundle.adminTable.table.options.a.title{% endtrans %}"><img
                    src="/admin/images/icons/options.png"
                    alt="{% trans from "views" %}black.bundle.adminTable.table.options.img.alt{% endtrans %}"/></a>
    {% endif %}

    <table cellpadding="0" cellspacing="0" width="100%"
           class="tDefault checkAll tMedia {% if documents %}dTable{% endif %}" id="dynamic">
        <thead>
        <tr>
            <td style="width: 30px"><img src="/admin/images/elements/other/tableArrows.png" alt=""/></td>
            {% for document in documents %}
                {% if loop.first %}
                    {% for key, value in document %}
                        {% if 'id' != key %}
                            <td class="sortCol">
                                <div>{{ key|trans({}, "form") }}<span></span></div>
                            </td>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            {% endfor %}
            <td style="width: 100px">{% trans from "views" %}black.bundle.admin.adminTable.table.options.text{% endtrans %}</td>
        </tr>
        </thead>

        <tbody>
        {% for document in documents %}
            {% include 'BlackAdminBundle:AdminTable:row.html.twig' with {'document': document} %}
        {% else %}
            <tr class="{% if loop.index is odd %}odd{% else %}even{% endif %}">
                <td colspan="3">{% trans from "views" %}black.bundle.admin.adminTable.table.record.empty.text{% endtrans %}</td>
            </tr>
        {% endfor %}
        </tbody>

        {% include 'BlackAdminBundle:AdminTable:tfoot.html.twig' %}
    </table>
</div>
