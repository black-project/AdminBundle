<tr class="{% if loop.index is odd %}odd{% else %}even{% endif %}">
    {% for key, value in document %}
        {% if 'id' == key %}
            <td><input type="checkbox" name="ids[]" value="{{ value }}"/></td>
        {% else %}
            <td class="textL">{{ value }}</td>
        {% endif %}
    {% endfor %}

    <td class="tableActs" align="center">
        {% if admin_show is defined %}
            <a href="{{ path(admin_show, { 'value': document.id }) }}" class="tablectrl_small bBlue tipS"
               title="{% trans from "views" %}black.bundle.admin.adminTable.row.show.title{% endtrans %}">
                &nbsp;<span class="iconb" data-icon="î†š">&nbsp;</span>
            </a>
        {% endif %}

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path(admin_edit, { 'value': document.id }) }}" class="tablectrl_small bGreen tipS"
               title="{% trans from "views" %}black.bundle.admin.adminTable.row.edit.title{% endtrans %}">
                <span class="iconb" data-icon="&#xe1db;"></span>
            </a>
            <a href="{{ path(admin_delete, { 'value': document.id, 'token': csrf.generateCsrfToken('delete') }) }}"
               class="tablectrl_small bRed tipS"
               title="{% trans from "views" %}black.bundle.admin.adminTable.row.delete.title{% endtrans %}">
                <span class="iconb" data-icon="&#xe136;"></span>
            </a>
        {% endif %}
    </td>
</tr>
