<tfoot>
    <tr>
        <td colspan="6">
            <div class="itemActions">
                <label>{% trans from "views" %}black.bundle.admin.adminTable.tfoot.action.label.text{% endtrans %}</label>
                <select name="batchAction" style="opacity: 0;">
                    <option value="">{% trans from "views" %}black.bundle.admin.adminTable.tfoot.action.select.default{% endtrans %}</option>
                    {% if is_granted('ROLE_ADMIN') %}
                    <option value="delete">{% trans from "views" %}black.bundle.admin.adminTable.tfoot.action.select.delete{% endtrans %}</option>
                    {% endif %}
                </select>
                <input type="hidden" name="token" value="{{ csrf.generateCsrfToken('batch') }}" />
                <input type="submit" class="buttonS bGreen" title="{% trans from "views" %}black.bundle.admin.adminTable.tfoot.action.submit.title{% endtrans %}" value="{% trans from "views" %}black.bundle.admin.adminTable.tfoot.action.submit.value{% endtrans %}" />
            </div>
        </td>
    </tr>
</tfoot>