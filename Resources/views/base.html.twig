{% if form is defined %}
    {% form_theme form 'BlackAdminBundle:AdminForm:fields.html.twig' %}
{% endif %}

{% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
{% set user = app.security.token.user %}
{% set name = user.username is defined ? user.username : '' %}

<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0"/>

    <title>{% block title %}{% trans from "views" %}black.bundle.admin.base.title.text{% endtrans %}{% endblock %}</title>

    {#  Import CSS  #}
    {% stylesheets 'admin/css/styles.css' filter="cssrewrite" %}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen, projection"/>
    {% endstylesheets %}

    {% stylesheets 'admin/css/ie.css' filter="cssrewrite" %}
    <!--[if IE]>
    <link href="{{ asset_url }}" rel="stylesheet" media="screen, projection"/> <![endif]-->
    {% endstylesheets %}

    {% block stylesheets %}{% endblock %}

    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

</head>

<body class="container">
{% block body %}
{% endblock body %}

